@model OnlineShop.Application.Models.Customers.CustomerDetailsViewModel
@{
    ViewData["Title"] = "Customer Details";
}

<div class="container">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">@Model.FirstName @Model.LastName</h4>

            <table class="table">
                <tbody>
                    <tr>
                        <th class="col-md-3">First Name</th>
                        <td>@Model.FirstName</td>
                    </tr>
                    <tr>
                        <th class="col-md-3">Middle Name</th>
                        <td>@Model.MiddleName</td>
                    </tr>
                    <tr>
                        <th class="col-md-3">Last Name</th>
                        <td>@Model.LastName</td>
                    </tr>
                    <tr>
                        <th class="col-md-3">Suffix</th>
                        <td>@Model.Suffix</td>
                    </tr>
                    <tr>
                        <th class="col-md-3">Email Address</th>
                        <td>@Model.EmailAddress</td>
                    </tr>
                    <tr>
                        <th class="col-md-3">Phone</th>
                        <td>@Model.Phone</td>
                    </tr>
                    <tr>
                        <th class="col-md-3">Name Style</th>
                        <td>
                            @if (Model.NameStyle)
                            {
                                <p>Mr.</p>
                            }
                            else
                            {
                                <p>Ms.</p>
                            }
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="form-group mt-4">
                <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
                <a href="@Url.Action("Edit", new { id = Model.CustomerID })" class="btn btn-primary">Edit</a>
                <a href="@Url.Action("Delete", new { id = Model.CustomerID })" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>

<style>
    table.table {
        width: 100%;
        margin-top: 20px;
        border-spacing: 0;
    }

        table.table th,
        table.table td {
            padding: 10px;
            vertical-align: middle;
        }

        table.table th {
            background-color: #f8f9fa;
            font-weight: bold;
        }

        table.table td {
            color: #495057;
        }

    .form-group {
        margin-top: 20px;
    }

    .card {
        margin-top: 20px;
    }
</style>