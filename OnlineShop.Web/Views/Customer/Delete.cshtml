@model OnlineShop.Application.Models.Customers.CustomerDetailsViewModel

<h1>Delete Customer</h1>

<p>Are you sure you want to delete the customer <strong>@Model.FirstName @Model.LastName</strong>?</p>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.CustomerID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
</form>
