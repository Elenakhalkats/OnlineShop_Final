@model IEnumerable<OnlineShop.Application.Models.Customers.CustomerListViewModel>

<h1>Customer List</h1>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>@customer.EmailAddress</td>
                <td>@customer.Phone</td>
                <td>
                    <a href="@Url.Action("Details", new { id = customer.CustomerID })">Details</a> |
                    <a href="@Url.Action("Edit", new { id = customer.CustomerID })">Edit</a> |
                    <a href="@Url.Action("Delete", new { id = customer.CustomerID })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create")" class="btn btn-primary">Create New Customer</a>
